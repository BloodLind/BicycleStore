@{
}

@model BicycleStore.Web.Models.ViewModels.Account.ChangePasswordViewModel
<form method="post" class="cardContainer">

    <div class="d-flex flex-column justify-items-center   m-3">
        @Html.ValidationSummary()


        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)

        @Html.LabelFor(x => x.NewPassword)
        @Html.PasswordFor(x => x.NewPassword)
        @Html.ValidationMessageFor(x => x.NewPassword)


        <input type="submit" value="Login" class="btn btn-primary" />
        <a class="btn btn-primary" asp-action="Register">
            Register
        </a>
    </div>


</form>





