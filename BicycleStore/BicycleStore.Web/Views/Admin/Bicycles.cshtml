@{
}
@using BicycleStore.BikesDatabase.Models
@model IEnumerable<Bicycle>

<a class="btn-dark btn" href="~/Admin/CreateOrEdit">Add</a>
<a class="btn-info btn" href="~/Admin/EditUsers">Edit Roles</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tittle</th>
            <th>Model</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bicycle in Model)
        {
            <tr>
                <td>@bicycle.Id</td>
                <td>@bicycle.Tittle</td>
                <td>@bicycle.Model</td>
                <td>@bicycle.Price</td>
                <td><a class="btn btn-primary" asp-action="CreateOrEditBicycle" asp-controller="Admin" asp-route-id="@bicycle.Id">Edit</a></td>

                <td>
                    <a class="btn btn-danger" asp-action="DeleteBicycle" asp-controller="Admin" asp-route-id="@bicycle.Id">Delete</a>
                </td>



            </tr>
        }
    </tbody>
</table>
<script>

</script>

<div class="d-flex flex-row justify-content-center bg-dark ">
    @for (int i = 0; i < ViewBag.countPages; i++)
    {
        <a class="m-2 btn btn-primary" href="~/Admin/?page=@(i+1)">@(i+1)</a>
    }


</div>