@{
    ViewData["Title"] = "Home Page";

}

@model IEnumerable<BicycleStore.BikesDatabase.Models.Bicycle>

@addTagHelper *,BicycleStore.Web.TagHelpers.PaginationTagHelper
@addTagHelper *,BicycleStore.Web
<a asp-action="Index" asp-controller="Cart" class="btn-primary btn" asp-route-returnUrl="/Home">Cart</a>

<div class="d-flex flex-row justify-content-between m-2">
    @await Component.InvokeAsync("Navigation")
</div>
<div class="d-flex flex-row justify-content-center justify-items-center align-items-center text-center" >
    <label for="search" >Search </label>
    <input class="invisibleInput m-1" type="text" id="search" />
</div>
<div class="d-flex flex-row">

    <div class="col-3">
        @await Component.InvokeAsync("Filters")
    </div>
    <div class="col-9">

        <h2>@ViewBag.IndexContent</h2>
      
        <div id="bicycles">
         
        </div>
      

       
    </div>
</div>



