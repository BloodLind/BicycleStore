@{
    ViewData["Title"] = "Home Page";
    
}

@model IEnumerable<BicycleStore.BikesDatabase.Models.Bicycle>

<a asp-action="Index" asp-controller="Cart"class="btn-primary btn" asp-route-returnUrl="/Home">Cart</a>

<div class="d-flex flex-row justify-content-between m-2">
    @await Component.InvokeAsync("Navigation")
</div>

<div class="d-flex flex-row">

    <div class="col-3">
        @await Component.InvokeAsync("Filters")
    </div>
    <div class="col-9">

    <h2>@ViewBag.IndexContent</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Tittle</th>
                <th>Model</th>
                <th>Color</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bicycle in Model)
            {
                <tr>
                   
                    <td>@bicycle.Tittle</td>
                    <td>@bicycle.Model</td>
                    <td style="height:1ch;color:@bicycle.Color"></td>
                    <td>@bicycle.Price</td>

               
                    <td>
                        @using (Html.BeginForm("AddToCart", "Cart"))
                        {

                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <input type="hidden" name="id" value="@bicycle.Id" />
                        <input type="submit" value="+" class="btn btn-info"  />
                        }
                    </td>


                </tr>
            }
        </tbody>
    </table>
    </div>
</div>



